{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "strict": true,
    "types": ["react-native", "jest"],
    "moduleResolution": "node",
    "noEmit": true,
    "module": "esnext",
    "target": "esnext"
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
